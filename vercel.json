{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_SMTP_HOST": "@vite_smtp_host",
    "VITE_SMTP_PORT": "@vite_smtp_port",
    "VITE_SMTP_USER": "@vite_smtp_user",
    "VITE_SMTP_PASS": "@vite_smtp_pass",
    "VITE_SMTP_FROM": "@vite_smtp_from",
    "VITE_APP_URL": "@vite_app_url"
  }
} 